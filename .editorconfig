# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Common
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Python
[*.py]
indent_style = space
indent_size = 4

# PHP
[*.py]
indent_style = space
indent_size = 4

# Ruby
[*.{rb, erb}]
indent_style = space
indent_size = 2

# JavaScript
[*.{js, json}]
indent_style = space
indent_size = 2

# HTML 
[*.{html, htm}]
indent_style = space
indent_size = 2

# CSS
[*.{css, scss, sass, less}]
indent_style = space
indent_size = 2
